{
  "compilerOptions": {
      "target": "ES6",
      "baseUrl": ".",
      "paths": {
        "src/**/*": ["./src/*"]
      }
  },
  "include": [
    "src/javascript/*"
  ],
  "exclude": [
    ".temp/*",
    "build/*",
    "dist/*",
    "gulp/*",
    "kitchen/*",
    "node_modules",
    "**/node_modules/*",
    "sassdoc/*",
    "test/*",
    "typings/*"
  ],
  "noLib": "true",
  "experimentalDecorators": "true"
}
